<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="1dp"
        android:layout_centerHorizontal="true"
        android:innerRadius="0dp"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name "
                android:textSize="20sp"
                android:textColor="#000"
                />
            <TextView
                android:layout_toRightOf="@+id/name"
                android:id="@+id/nameofperson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vasu "
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Male"
                android:layout_marginRight="5dp"
                android:textSize="18sp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/email"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:layout_below="@+id/name"
                android:textSize="18sp"
                android:textColor="#000"/>

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/emailofperson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:text="Vasu14114@iiitd.ac.in"
                android:layout_toRightOf="@+id/email"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:textColor="#000"/>

             <TextView
                 android:id="@+id/address"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_below="@+id/email"
                 android:layout_marginTop="10dp"
                 android:text="Address :"
                 android:textSize="18sp"
                 android:textColor="#000"
                 />
            <TextView
                android:id="@+id/addressofperson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="xxxxxxxxxx"
                android:layout_below="@+id/email"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_toRightOf="@+id/address"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/phones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phones-"
                android:layout_below="@id/address"
                android:textColor="#000"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phones"
                android:text="Home"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/homenumberofperson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/phones"
                android:text="xxxxxx"
                android:layout_marginTop="10dp"
                android:textColor="#000"
                android:layout_toRightOf="@+id/home"
                android:layout_marginLeft="20dp"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/office"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/home"
                android:text="office"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/officenumberofperson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/home"
                android:text="xxxxx"
                android:layout_marginTop="10dp"
                android:textColor="#000"
                android:layout_toRightOf="@+id/office"
                android:layout_marginLeft="20dp"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/office"
                android:text="Mobile"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/mobilenumberofperson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/office"
                android:text="xxxxxxxxx"
                android:layout_marginTop="10dp"
                android:textColor="#000"
                android:layout_toRightOf="@+id/mobile"
                android:layout_marginLeft="20dp"
                android:textSize="18sp"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>